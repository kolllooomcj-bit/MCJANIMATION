zombie = game:GetService("RunService").Stepped:Connect(function ()
    local char = game.Players.LocalPlayer.Character
    if not char or not char:FindFirstChild("Animate") then return end

    -- üí§ Idle (Toy)
    char.Animate.idle.Animation1.AnimationId = "http://www.roblox.com/asset/?id=782841498"
    char.Animate.idle.Animation2.AnimationId = "http://www.roblox.com/asset/?id=782845736"

    -- üèÉ Walk & Run (Toy)
    char.Animate.walk.WalkAnim.AnimationId = "http://www.roblox.com/asset/?id=782843345"
    char.Animate.run.RunAnim.AnimationId = "http://www.roblox.com/asset/?id=10921306285"

    -- ü¶ò Jump & Fall (Toy)
    char.Animate.jump.JumpAnim.AnimationId = "http://www.roblox.com/asset/?id=10921308158"
    char.Animate.fall.FallAnim.AnimationId = "http://www.roblox.com/asset/?id=782846423"

    -- üßó Climb & Swim (Toy)
    char.Animate.climb.ClimbAnim.AnimationId = "http://www.roblox.com/asset/?id=10921310341"
    char.Animate.swim.SwimIdleAnim.AnimationId = "http://www.roblox.com/asset/?id=10921309319"
    char.Animate.swim.SwimAnim.AnimationId = "http://www.roblox.com/asset/?id=10921300839"
end)
